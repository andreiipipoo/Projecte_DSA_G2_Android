<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usernameUsuario1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:backgroundTint="#000000"
    android:foregroundTint="#000000">

    <Button
        android:id="@+id/buttonInsignia"
        android:layout_width="149dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:text="Recibir Insignia"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enviarBtn"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/volverBtn2"
        android:layout_width="75dp"
        android:layout_height="54dp"
        android:background="@color/lavender"
        android:backgroundTint="@color/lavender"
        android:contentDescription="Enter How Much Cookies You Want"
        android:onClick="volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="405dp"
        android:layout_height="66dp"
        android:background="#00FDFDFD"
        android:backgroundTint="#FAF7F7"
        android:backgroundTintMode="src_atop"
        android:foregroundTint="#FAFAFA"
        android:foregroundTintMode="src_atop"
        android:textColorHint="@color/lavender"
        app:boxBackgroundColor="#3CFAF8F8"
        app:boxStrokeColor="#FFFFFF"
        app:boxStrokeErrorColor="#FFFFFF"
        app:cursorColor="#F6F0F0"
        app:cursorErrorColor="#F3EEEE"
        app:endIconTint="#FFFFFF"
        app:endIconTintMode="src_atop"
        app:errorIconTintMode="src_atop"
        app:errorTextColor="#EFE7E7"
        app:helperTextTextColor="#FBFBFB"
        app:hintTextColor="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:passwordToggleTint="#F4F0F0"
        app:passwordToggleTintMode="src_atop"
        app:placeholderTextColor="#FAF5F5"
        app:prefixTextColor="#FFFCFC"
        app:startIconTint="#F4F0F0"
        app:startIconTintMode="src_atop"
        app:suffixTextColor="#FDFDFD">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idUsuario2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FDFDFD"
            android:backgroundTintMode="src_atop"
            android:drawableTint="#FFFCFC"
            android:drawableTintMode="src_atop"
            android:foregroundTint="#FFFFFF"
            android:foregroundTintMode="src_atop"
            android:hint="Introduce aquÃ­ un username"
            android:shadowColor="@color/lavender"
            android:textColor="@color/lavender"
            android:textColorHint="@color/lavender"
            android:textColorLink="@color/lavender"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/enviarBtn"
        android:layout_width="127dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="349dp"
        android:layout_height="39dp"
        android:text="ID: "
        android:textColor="@color/lavender"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enviarBtn"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="354dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:text="Username: "
        android:textColor="@color/lavender"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="342dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:text="Telephone: "
        android:textColor="@color/lavender"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="345dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:text="Email: "
        android:textColor="@color/lavender"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="CroCoins: "
        android:textColor="@color/lavender"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="399dp"
        android:layout_height="440dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.832"
        tools:listitem="@layout/row_layout2" />

</androidx.constraintlayout.widget.ConstraintLayout>