<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShopDashboard" android:backgroundTint="#0A0D13" android:background="#0B0C12">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout"
            android:layout_marginTop="20dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:id="@+id/croackyName"
                android:text="Croacky Shop"
                android:textSize="24sp"
                android:textColor="@color/lavender"
                android:layout_marginStart="18dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/croackyImage"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/croackyDesc"
                android:text="Compra aquÃ­ apariencias para tu personaje"
                android:textSize="14sp"
                android:layout_marginStart="18dp"
                android:textColor="@color/lavender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/croackyName"
                app:layout_constraintEnd_toStartOf="@+id/croackyImage" android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/croackyImage"
                android:src="@drawable/croacky"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/croackyName"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row1"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/croackyImage">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ranaCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ranaName"
                            android:text="Croacky"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ranaImage"/>

                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/ranaImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ranaidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/desiertoCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/desiertoName"
                            android:text="Sand-Croacky"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ranadesiertoImage"/>
                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/ranadesiertoImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ranadesiertoidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row2"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row1">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/maskCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/maskName"
                            android:text="Mask"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/maskImage"/>
                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/maskImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/maskidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pinkCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pinkName"
                            android:text="Endd"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/pinkImage"/>
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/pinkImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/pinkmanidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row2">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/virtual1Card"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/virtual1Name"
                            android:text="Among"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/virtual1Image"/>
                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/virtual1Image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/virtualguyidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/virtual2Card"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/virtual2Name"
                            android:text="Among"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/virtual2Image"/>
                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/virtual2Image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/virtualguyidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row4"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/row3">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/virtualCard"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/virtualName"
                            android:text="Among"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/virtualImage"/>
                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/virtualImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/virtualguyidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/scientistCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="#171A2E">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scientistName"
                            android:text="Vid"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/scientistImage"/>
                    <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/scientistImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/scientistidle"
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="43dp" app:srcCompat="@drawable/frutas" android:id="@+id/frutasImage"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="124dp" android:layout_marginEnd="196dp"/>
        <TextView
                android:text="Tus frutas: 00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/saldoText"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="132dp" android:layout_marginStart="16dp" android:textSize="20sp"
                android:textColor="#8079DF"/>
        <ImageButton
                android:id="@+id/volver4"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:contentDescription="Volver a Home"
                android:onClick="volver2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_revert" android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>